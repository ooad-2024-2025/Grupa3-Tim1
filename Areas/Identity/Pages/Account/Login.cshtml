@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
}

<div class="bg-white rounded-xl shadow-sm p-6 max-w-md mx-auto mt-10">
    <h2 class="text-xl font-bold text-gray-900 mb-6">@ViewData["Title"]</h2>

    <form id="account" method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>

        <div>
            <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input asp-for="Input.Email" class="block w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1">Lozinka</label>
            <input asp-for="Input.Password" class="block w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex items-center">
            <input asp-for="Input.RememberMe" class="h-4 w-4 text-red-500 border-gray-300 rounded focus:ring-red-500" />
            <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-700">Zapamti me</label>
        </div>

        <div>
            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white w-full px-5 py-2 rounded-full transition-colors">Prijavi se</button>
        </div>

        <div class="text-center text-sm text-gray-600">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-red-500 hover:underline">Zaboravljena lozinka?</a>
            </p>
            <p class="mt-4">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-red-500 hover:underline">Registriraj novi račun</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
