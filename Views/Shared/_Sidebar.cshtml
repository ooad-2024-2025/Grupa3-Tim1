                    <span>Moj profil</span>
                </a>
            </li>

            <!-- Admin Section -->
            @if (isAdmin)
            {
                <li class="mt-6 mb-2 px-3">
                    <span class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase tracking-wider">
                        Admin
