@model Matchletic.Models.Recenzija

@{
    ViewData["Title"] = "Nova recenzija";
}

<div class="max-w-4xl mx-auto py-8">
    <div class="mb-6">
        <a href="@Url.Action("Details", "Mec", new { id = Model.MecID })" class="inline-flex items-center text-gray-500 hover:text-gray-800">
            <i data-feather="arrow-left" class="mr-2" width="16" height="16"></i>
            Nazad na meč
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-6 md:p-8">
            <h1 class="text-2xl font-bold text-gray-900 mb-6">@ViewData["Title"]</h1>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

                <div class="space-y-6">
                    <div class="form-group">
                        <label asp-for="MecID" class="block text-sm font-medium text-gray-700">Meč</label>
                        <select asp-for="MecID" asp-items="ViewBag.MecOptions" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500">
                            <option value="">-- Odaberi meč --</option>
                        </select>
                        <span asp-validation-for="MecID" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Ocjena" class="block text-sm font-medium text-gray-700">Ocjena</label>
                        <div class="mt-2 flex items-center space-x-4">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <div class="flex items-center">
                                    <input type="radio" asp-for="Ocjena" value="@i" id="ocjena@i" class="h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300" />
                                    <label for="ocjena@i" class="ml-2 block text-sm text-gray-900">@i</label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="Ocjena" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Komentar" class="block text-sm font-medium text-gray-700">Komentar</label>
                        <textarea asp-for="Komentar" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500"></textarea>
                        <span asp-validation-for="Komentar" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="flex justify-end space-x-3">
                        <a href="@Url.Action("Details", "Mec", new { id = Model.MecID })" class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-50">
                            Odustani
                        </a>
                        <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600">
                            Spremi recenziju
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
