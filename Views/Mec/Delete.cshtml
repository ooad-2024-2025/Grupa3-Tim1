@model Matchletic.Models.Mec

@{
    ViewData["Title"] = "Izbriši meč";
}

<div class="max-w-3xl mx-auto py-8">
    <div class="mb-6">
        <a href="@Url.Action("MojiMecevi")" class="inline-flex items-center text-gray-500 hover:text-gray-800">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Natrag na popis
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm overflow-hidden mb-8">
        <div class="bg-red-50 dark:bg-red-900/30 border-b border-red-100 dark:border-red-800/50 p-4">
            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600 dark:text-red-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <h1 class="text-xl font-bold text-gray-900 dark:text-white">Jeste li sigurni da želite izbrisati ovaj meč?</h1>
            </div>
        </div>

        <div class="p-6 dark:bg-gray-800">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <h3 class="font-semibold text-gray-700 dark:text-gray-300 mb-1">Naslov</h3>
                    <p class="text-gray-900 dark:text-white">@Model.Naslov</p>
                </div>

                <div>
                    <h3 class="font-semibold text-gray-700 dark:text-gray-300 mb-1">Sport</h3>
                    <p class="text-gray-900 dark:text-white">@(Model.Sport?.Naziv ?? "Nepoznat sport")</p>
                </div>

                <div>
                    <h3 class="font-semibold text-gray-700 dark:text-gray-300 mb-1">Datum meča</h3>
                    <p class="text-gray-900 dark:text-white">@Model.DatumMeca.ToString("dd.MM.yyyy HH:mm")</p>
                </div>

                <div>
                    <h3 class="font-semibold text-gray-700 dark:text-gray-300 mb-1">Lokacija</h3>
                    <p class="text-gray-900 dark:text-white">@Model.Lokacija</p>
                </div>

                <div>
                    <h3 class="font-semibold text-gray-700 dark:text-gray-300 mb-1">Status</h3>
                    <p class="text-gray-900 dark:text-white">@Model.Status</p>
                </div>

                <div>
                    <h3 class="font-semibold text-gray-700 dark:text-gray-300 mb-1">Broj igrača</h3>
                    <p class="text-gray-900 dark:text-white">@(Model.KorisniciMeca?.Count ?? 0) / @Model.BrojIgraca</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Opis))
            {
                <div class="mb-6">
                    <h3 class="font-semibold text-gray-700 dark:text-gray-300 mb-1">Opis</h3>
                    <p class="text-gray-900 dark:text-white whitespace-pre-line">@Model.Opis</p>
                </div>
            }

            <div class="pt-4 border-t border-gray-100 dark:border-gray-700">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.MecID" />
                    <div class="flex justify-end space-x-3">
                        <a asp-action="Edit" asp-route-id="@Model.MecID" class="border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 px-5 py-2 rounded-full transition-colors">Odustani</a>
                        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-5 py-2 rounded-full transition-colors">Izbriši meč</button>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>
