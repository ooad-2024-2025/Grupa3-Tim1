</div>

<!-- Tab s izazovima -->
<div id="izazovi-container" class="hidden">
    <!-- Izazovi koje sam primio -->
    @if (izazoviPrimljeni.Any())
    {
        <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Primljeni izazovi</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var mec in izazoviPrimljeni)
                {
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm overflow-hidden border-2 border-yellow-400 dark:border-yellow-600">
                        <div class="p-5">
                            <div class="flex justify-between items-start mb-3">
                                <div>
                                    <h3 class="font-semibold text-gray-900 dark:text-white text-lg">@mec.Naslov</h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-400">
                                        <i data-feather="user" class="inline-block mr-1" width="14" height="14"></i>
                                        Izazivač: @mec.Kreator.Ime @mec.Kreator.Prezime
                                    </p>
                                </div>
                                <span class="bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-400 text-xs px-2 py-1 rounded-full font-medium">
                                    Čeka odgovor
                                </span>
                            </div>

                            <p class="text-gray-700 dark:text-gray-300 text-sm mb-4">@mec.Opis</p>

                            <div class="grid grid-cols-2 gap-3 text-sm mb-4">
                                <div>
                                    <span class="block text-gray-500 dark:text-gray-400">Sport</span>
                                    <span class="font-medium text-gray-900 dark:text-white">@mec.Sport.Naziv</span>
                                </div>
                                <div>
                                    <span class="block text-gray-500 dark:text-gray-400">Lokacija</span>
                                    <span class="font-medium text-gray-900 dark:text-white">@mec.Lokacija</span>
                                </div>
                                <div>
                                    <span class="block text-gray-500 dark:text-gray-400">Datum</span>
                                    <span class="font-medium text-gray-900 dark:text-white">@mec.DatumMeca.ToString("dd.MM.yyyy")</span>
                                </div>
                                <div>
                                    <span class="block text-gray-500 dark:text-gray-400">Vrijeme</span>
                                    <span class="font-medium text-gray-900 dark:text-white">@mec.DatumMeca.ToString("HH:mm")</span>
                                </div>
                            </div>

                            <div class="flex space-x-2">
                                <form asp-action="AcceptChallenge" asp-controller="Mec" method="post" class="flex-1">
                                    <input type="hidden" name="id" value="@mec.MecID" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white px-3 py-2 rounded-lg transition-colors text-sm font-medium">
                                        Prihvati
                                    </button>
                                </form>
                                <form asp-action="RejectChallenge" asp-controller="Mec" method="post" class="flex-1">
                                    <input type="hidden" name="id" value="@mec.MecID" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded-lg transition-colors text-sm font-medium">
                                        Odbij
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Izazovi koje sam poslao -->
    @if (izazoviKreirani.Any())
    {
        <div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Poslani izazovi</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var mec in izazoviKreirani)
                {
                    <partial name="_MatchCard" model="mec" />
                }
            </div>
        </div>
    }

    @if (!izazoviPrimljeni.Any() && !izazoviKreirani.Any())
    {
        <div class="col-span-3 py-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-1">Nema izazova</h3>
            <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-md mx-auto">
                Trenutno nemate poslanih niti primljenih izazova.
            </p>
        </div>
    }
</div>

