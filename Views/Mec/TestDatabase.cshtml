@model Dictionary<string, string>
@{
    ViewData["Title"] = "Test Database";
}

<div class="bg-white rounded-xl shadow-sm p-6 mb-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-4">Dijagnostika baze podataka</h1>

    <div class="space-y-4">
        @foreach (var item in Model)
        {
            <div class="border rounded-lg p-4 @(item.Key.StartsWith("GREŠKA") ? "bg-red-50" : "bg-gray-50")">
                <h3 class="font-semibold @(item.Key.StartsWith("GREŠKA") ? "text-red-700" : "text-gray-700")">@item.Key</h3>
                <p class="mt-2 text-sm @(item.Key.StartsWith("GREŠKA") ? "text-red-600" : "text-gray-600") whitespace-pre-wrap">@item.Value</p>
            </div>
        }
    </div>

    <div class="mt-6 flex space-x-4">
        <a href="@Url.Action("TestDatabase")" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-full transition-colors">
            Osvježi test
        </a>
        <a href="@Url.Action("Feed")" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-full transition-colors">
            Feed mečeva
        </a>
    </div>
</div>
