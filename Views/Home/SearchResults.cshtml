@model Matchletic.Models.SearchResultsViewModel
@{
    ViewData["Title"] = "Rezultati pretrage";
}

<div class="max-w-5xl mx-auto py-8">
    <h1 class="text-2xl font-bold mb-6">Rezultati pretrage za: <span class="text-red-500">@Model.Query</span></h1>

    <div class="mb-10">
        <h2 class="text-xl font-semibold mb-4">Korisnici</h2>
        @if (Model.Korisnici.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var korisnik in Model.Korisnici)
                {
                    <div class="bg-white rounded-xl shadow-sm p-6 flex items-center">
                        @if (!string.IsNullOrEmpty(korisnik.ProfilnaSlika))
                        {
                            <img src="@korisnik.ProfilnaSlika" alt="@korisnik.Ime" class="w-14 h-14 rounded-full object-cover mr-4 border-2 border-white shadow" />
                        }
                        else
                        {
                            <div class="w-14 h-14 rounded-full bg-red-100 flex items-center justify-center mr-4 border-2 border-white shadow">
                                <span class="text-red-500 font-bold text-xl">@korisnik.Ime.FirstOrDefault()</span>
                            </div>
                        }
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">@korisnik.Ime @korisnik.Prezime</h3>
                            <div class="text-sm text-gray-500">
                                @if (korisnik.KorisnickiSportovi != null && korisnik.KorisnickiSportovi.Any())
                                {
                                    <span>Sportovi: </span>
                                    @foreach (var sport in korisnik.KorisnickiSportovi.Select(ks => ks.Sport))
                                    {
                                        <span class="px-2 py-1 bg-red-100 text-red-800 rounded-full text-xs mr-1">@sport.Naziv</span>
                                    }
                                }
                                else
                                {
                                    <span>Nema sportova</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-gray-500">Nema korisnika za ovu pretragu.</div>
        }
    </div>

    <div>
        <h2 class="text-xl font-semibold mb-4">Mečevi</h2>
        @if (Model.Mecevi.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var mec in Model.Mecevi)
                {
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">@mec.Naslov</h3>
                        <div class="text-sm text-gray-500 mb-1">Sport: <span class="font-medium">@mec.Sport?.Naziv</span></div>
                        <div class="text-sm text-gray-500 mb-1">Lokacija: <span class="font-medium">@mec.Lokacija</span></div>
                        <div class="text-sm text-gray-500 mb-1">Datum: <span class="font-medium">@mec.DatumMeca.ToString("dd.MM.yyyy HH:mm")</span></div>
                        <a href="@Url.Action("Details", "Mec", new { id = mec.MecID })" class="mt-2 inline-block bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-colors text-sm">Detalji</a>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-gray-500">Nema mečeva za ovu pretragu.</div>
        }
    </div>
</div> 