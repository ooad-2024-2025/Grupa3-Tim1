@using Microsoft.AspNetCore.Http

@model IEnumerable<Matchletic.Models.Korisnik>
@{
    ViewData["Title"] = "Pronađi igrače";
    // Dohvati trenutnog korisnika iz session
    var currentUserId = Context.Session.GetInt32("KorisnikID");

    // Ako korisnik nije prijavljen, preusmjeri ga na stranicu za prijavu
    if (currentUserId == null)
    {
        Context.Response.Redirect(Url.Action("Login", "Account", new { area = "Identity" }));
        return;
    }
}

<div class="max-w-5xl mx-auto">
    <div class="mb-6">
        <h1 class="text-2xl font-bold mb-6 dark:text-white">Pronađi igrače</h1>

        <form method="get" class="flex mb-4">
            <div class="relative flex-grow mr-4">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Pretraži igrače po imenu ili sportu..."
                       class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                <i data-feather="search" class="absolute right-3 top-3 text-gray-400" width="18" height="18"></i>
            </div>
            <button type="submit" class="flex items-center px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors">
                <i data-feather="search" class="mr-2" width="18" height="18"></i>
                <span>Pretraži</span>
            </button>
        </form>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var korisnik in Model)
        {
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 hover:shadow-md transition-shadow">
                <div class="flex items-center mb-4">
                    @if (!string.IsNullOrEmpty(korisnik.ProfilnaSlika))
                    {
                        <img src="@korisnik.ProfilnaSlika" alt="@korisnik.Ime" class="w-16 h-16 rounded-full object-cover mr-4 border-2 border-white shadow" />
                    }
                    else
                    {
                        <div class="w-16 h-16 rounded-full bg-red-100 flex items-center justify-center mr-4 border-2 border-white shadow">
                            <span class="text-red-500 font-bold text-xl">@korisnik.Ime.FirstOrDefault()</span>
                        </div>
                    }
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">@korisnik.Ime @korisnik.Prezime</h3>
                        <div class="text-sm text-gray-500 dark:text-gray-400">
                            <div class="flex items-center">
                                <i data-feather="star" class="mr-1" width="14" height="14"></i>
                                <span>@korisnik.Ocjena.ToString("0.0")</span>
                            </div>
                        </div>
                    </div>
                </div>

                @if (korisnik.KorisnickiSportovi != null && korisnik.KorisnickiSportovi.Any())
                {
                    <div class="mb-4">
                        <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Sportovi:</h4>
                        <div class="flex flex-wrap gap-2">
                            @foreach (var sport in korisnik.KorisnickiSportovi.Select(ks => ks.Sport))
                            {
                                <span class="px-2 py-1 bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400 rounded-full text-xs">
                                    @sport.Naziv
                                </span>
                            }
                        </div>
                    </div>
                }

                <div class="flex justify-end">
                    <button onclick="showChallengeModal(@korisnik.KorisnikID)" 
                            class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors text-sm">
                        Izazovi na meč
                    </button>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-8">
            <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Nema rezultata</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                @(string.IsNullOrEmpty(ViewBag.SearchTerm) 
                    ? "Trenutno nema dostupnih igrača." 
                    : "Nema rezultata za vašu pretragu.")
            </p>
        </div>
    }
</div>

@section Scripts {
    <script>
        function showChallengeModal(korisnikId) {
            $.get('@Url.Action("GetChallengeModal", "Korisnik")/' + korisnikId, function(data) {
                $('#challengeModalContainer').html(data);
                $('#challengeModal').modal('show');
                feather.replace();
            });
        }
    </script>
}
